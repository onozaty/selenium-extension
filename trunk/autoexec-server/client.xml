<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="client" name="selenium-autoexec-server">
    <path id="classpath">
      <pathelement location="lib/junit-3.8.2.jar"/>
      <pathelement location="selenium-autoexec-client-0.3-SNAPSHOT.jar"/>
    </path>
    <target name="client">
      <java classname="com.enjoyxstudy.selenium.autoexec.client.RemoteControlClient" failonerror="true" fork="yes">
        <classpath refid="classpath"/>
        <arg value="-a"/>
        <arg value="http://localhost:4444/selenium-server/autoexec/command/"/>
      </java>
    </target>
    <target name="test">
      <java classname="com.enjoyxstudy.selenium.autoexec.client.SeleniumAutoExecRemoteTest" failonerror="true" fork="yes">
        <classpath refid="classpath"/>
        <sysproperty key="seleniumaes.url" value="http://localhost:4444/selenium-server/autoexec/command/"/>
        <sysproperty key="seleniumaes.async" value="true"/>
      </java>
    </target>
</project>
